name: ğŸ¤– Agent Auto-Deploy

on:
  push:
    branches: [ main ]
  workflow_dispatch:
  repository_dispatch:
    types: [agent-deploy]

jobs:
  deploy:
    runs-on: ubuntu-latest
    steps:
      - name: ğŸ“¥ Checkout code
        uses: actions/checkout@v4
        
      - name: ğŸ”§ Setup Flutter
        uses: subosito/flutter-action@v2
        with:
          flutter-version: '3.32.7'
          
      - name: ğŸ“¦ Get dependencies
        run: flutter pub get
        
      - name: ğŸ—ï¸ Build web app
        run: flutter build web --release
        
      - name: ğŸš€ Deploy to Firebase
        run: |
          npm install -g firebase-tools
          firebase deploy --only hosting --token "${{ secrets.FIREBASE_TOKEN }}" --project agenticsfoundation-2e916
          
      - name: ğŸ“ Log deployment
        run: |
          echo "ğŸ‰ Web app deployed successfully at $(date)"
          echo "URL: https://agenticsfoundation-2e916.web.app"